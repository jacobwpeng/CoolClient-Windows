<xlue>
	<control class="Demo.ButtonPage">
		<objtemplate>
			<children>
				<obj id="BtnNormal" class="Thunder.Button">
					<attr>
						<left>10</left>
						<top>10</top>
						<width>100</width>
						<height>23</height>
						<Text>普通按钮</Text>
						<taborder>1</taborder>
					</attr>
				</obj>

				<obj id="BtnDisable" class="Thunder.Button">
					<attr>
						<left>10</left>
						<top>10+23+4</top>
						<width>100</width>
						<height>23</height>
						<Text>禁用按钮</Text>
						<taborder>2</taborder>
					</attr>
					<eventlist>
						<event name="OnInitControl" file="ButtonPage.xml.lua" func="OnInitDisableBtn" />
					</eventlist>
				</obj>
				
				<obj class="TextObject">
					<attr>
						<left>12</left>
						<top>10+23+4+23+4</top>
						<width>48</width>
						<height>27</height>
						<text>图片按钮</text>
					</attr>
				</obj>
				
				<obj id="BtnImage" class="Thunder.ImageButton">
					<attr>
						<left>10+73</left>
						<top>10+23+4+23+4</top>
						<width>27</width>
						<height>27</height>
						<NormalBkgID>bitmap.ad.close.normal</NormalBkgID>
						<HoverBkgID>bitmap.ad.close.hover</HoverBkgID>
						<DownBkgID>bitmap.ad.close.down</DownBkgID>
						<taborder>3</taborder>
					</attr>
					<eventlist>
						<event name="OnClick" file="ButtonPage.xml.lua" func="OnClickImageBtn" />
					</eventlist>
				</obj>
				
				<obj id="BtnImageText" class="Thunder.ImageTextButton">
					<attr>
						<left>10</left>
						<top>10+23+4+23+4+27+4</top>
						<width>100</width>
						<height>26</height>
						<Text>图标按钮</Text>
						<IconBitmapID>bitmap.skinpanel.localskin</IconBitmapID>
						<IconWidth>20</IconWidth>
						<IconHeight>20</IconHeight>
						<BkgTextureID_Hover>imagelist.skinpanel.group.btn.bkg.hover</BkgTextureID_Hover>
						<BkgTextureID_Down>imagelist.skinpanel.group.btn.bkg.hover</BkgTextureID_Down>
						<IconLeftPos>4</IconLeftPos>
						<IconTopPos>4</IconTopPos>
						<TextLeftPos>26</TextLeftPos>
						<!-- <TextTopPos>5</TextTopPos> -->
						<HAlign>left</HAlign>
						<VAlign>center</VAlign>
						<taborder>4</taborder>
					</attr>
				</obj>
				
				<obj id="NormalCheckbox" class="Thunder.CheckBox">
					<attr>
						<left>10+100+16</left>
						<top>10</top>
						<width>100</width>
						<height>24</height>
						<Text>普通钩选</Text>
						<taborder>5</taborder>
					</attr>
				</obj>
				<obj id="DisableCheckbox" class="Thunder.CheckBox">
					<attr>
						<left>10+100+16</left>
						<top>10+4+24</top>
						<width>100</width>
						<height>24</height>
						<Text>禁用钩选</Text>
						<Check>true</Check>
						<enable>0</enable>
						<taborder>6</taborder>
					</attr>
				</obj>
				<obj id="NormalRadio1" class="Thunder.RadioButton">
					<attr>
						<left>10+100+16+100+16</left>
						<top>10</top>
						<width>100</width>
						<height>24</height>
						<Text>普通单选1</Text>
						<taborder>7</taborder>
					</attr>
					<eventlist>
						<event name="OnRadioButtonClick" file="ButtonPage.xml.lua" func="OnUserRadioButtonClick" />
					</eventlist>
				</obj>
				<obj id="NormalRadio2" class="Thunder.RadioButton">
					<attr>
						<left>10+100+16+100+16</left>
						<top>10+24+4</top>
						<width>100</width>
						<height>24</height>
						<Text>普通单选2</Text>
						<taborder>8</taborder>
					</attr>
					<eventlist>
						<event name="OnRadioButtonClick" file="ButtonPage.xml.lua" func="OnUserRadioButtonClick" />
					</eventlist>
				</obj>
				<obj id="NormalRadio3" class="Thunder.RadioButton">
					<attr>
						<left>10+100+16+100+16</left>
						<top>10+24+4+24+4</top>
						<width>100</width>
						<height>24</height>
						<Text>普通单选3</Text>
						<taborder>9</taborder>
					</attr>
					<eventlist>
						<event name="OnRadioButtonClick" file="ButtonPage.xml.lua" func="OnUserRadioButtonClick" />
					</eventlist>
				</obj>
				
				<obj id="RadioGroup" class="Thunder.RadioButtonContainer">
					<attr>
						<top>10+24+4+24+4+24+4</top>
						<left>10+100+16+100+16</left>
						<width>100</width>
						<height>80</height>
					</attr>
					<eventlist>
						<event name="OnInitControl" file="ButtonPage.xml.lua" func="OnRadioButtonContainerInit" />
					</eventlist>
				</obj>
			</children>
		</objtemplate>
	</control>

</xlue>
